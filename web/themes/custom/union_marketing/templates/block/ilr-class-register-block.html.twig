{# @todo: fix issues with outputting the time #}
{% set class_details = [] %}
{% for class in classes %}
  {% set content %}
    <p class="cu-checkbutton__content--date">{{ class.field_date_start.value|date("M d, Y") }}</p>
    <time class="cu-checkbutton__content--time">{{ class.field_date_start.value|date("h:i a") ~ ' - ' ~ class.field_date_end.value|date("h:i a") }}</time>
  {% endset %}

  {% set class_details = class_details|merge([{
      id: class.id,
      content: content
    }]) %}
{% endfor %}

{% include '@union/_registration-form.twig' with {
  events: class_details
} only %}
