{#
/**
 * @file
 * Theme override of an image.
 *
 * Available variables:
 * - attributes: HTML attributes for the img tag.
 * - style_name: (optional) The name of the image style applied.
 *
 * @see template_preprocess_image()
 */
#}
{% if attributes.blurred %}
  {% set attributes = attributes.removeAttribute('blurred') %}
  {% set blurred = true %}
{% else %}
  {% set blurred = false %}
{% endif %}

{% include '@union/_image.twig' with {
  attributes: attributes.removeAttribute('blurred'),
  img_src: attributes.src,
  blurred: blurred,
} only %}

