{
  "name": "ilr-web-services/ilr",
  "description": "Composer-based Drupal 8 site for www.ilr.cornell.edu",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Aaron Froelich",
      "email": "aaronf@cornell.edu",
      "role": "Developer"
    },
    {
      "name": "Jeff Amaral",
      "email": "jeff.amaral@cornell.edu",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/union_organizer.git"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.2",
    "cweagans/composer-patches": "^1.6.5",
    "drupal/address": "^1.7",
    "drupal/allowed_formats": "^1.2",
    "drupal/block_visibility_groups": "^1.3",
    "drupal/config_split": "^1.4",
    "drupal/console": "^1.0.2",
    "drupal/core-composer-scaffold": "^8.8",
    "drupal/core-recommended": "^8.8",
    "drupal/date_range_formatter": "^3.1",
    "drupal/dynamic_entity_reference": "^2.0",
    "drupal/easy_breadcrumb": "^1.12",
    "drupal/entity_browser": "^2.4",
    "drupal/entity_reference_layout": "1.x-dev",
    "drupal/google_tag": "^1.2",
    "drupal/inline_entity_form": "^1.0@RC",
    "drupal/key_value_field": "^1.0",
    "drupal/menu_item_extras": "^2.8",
    "drupal/metatag": "^1.10",
    "drupal/migrate_file": "^1.1",
    "drupal/migrate_plus": "^4.2",
    "drupal/migrate_tools": "^4.3",
    "drupal/paragraphs": "^1.9",
    "drupal/pathauto": "^1.4",
    "drupal/prepopulate": "^2.2",
    "drupal/recreate_block_content": "^2.0",
    "drupal/redirect": "^1.4",
    "drupal/redis": "^1.2",
    "drupal/salesforce": "^3.4",
    "drupal/samlauth": "3.x-dev",
    "drupal/search_api": "^1.14",
    "drupal/summary_word_limit": "^1.0",
    "drupal/token_filter": "^1.1",
    "drupal/twig_tweak": "^2.4",
    "drupal/union_organizer": "dev-master",
    "drupal/webform": "^5.4",
    "drush/drush": "^10.0.0",
    "platformsh/config-reader": "^2.3",
    "vlucas/phpdotenv": "^2.4",
    "zaporylie/composer-drupal-optimizations": "^1.0"
  },
  "require-dev": {
    "drupal/core-dev": "^8.8",
    "drupal/devel_entity_updates": "^1.0@RC",
    "drupal/stage_file_proxy": "^1.0@RC"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true
  },
  "autoload": {
    "files": ["load.environment.php"]
  },
  "scripts": {
    "sync-prod": "drush sql:drop && drush sql:sync @ilr-web.master @self && ./post_sync_fix_triggers.php"
  },
  "extra": {
    "composer-exit-on-patch-failure": true,
    "patchLevel": {
      "drupal/core": "-p2"
    },
    "patches": {
      "drupal/core": {
        "Form blocks rendered inside layout builder break save": "https://www.drupal.org/files/issues/2019-08-12/3045171-79.patch",
        "Remove invalid iframe attributes from oembed field formatter": "https://www.drupal.org/files/issues/2019-07-31/remove-iframe-attributes-3071446-4.patch"
      },
      "drupal/address": {
        "Configure visible address fields per field formatter": "https://www.drupal.org/files/issues/2019-05-23/address-visible_address_fields_per_field_formatter-2852800-23.patch"
      },
      "drupal/samlauth": {
        "https://www.drupal.org/project/samlauth/issues/3099353": "https://www.drupal.org/files/issues/2019-12-06/samlauth-allow_idp_assertion_encryption-3099353-1.patch"
      },
      "drupal/webform": {
        "Render issue when saving nodes due to renderPlain": "https://www.drupal.org/files/issues/2019-12-05/3099030-10.patch"
      }
    },
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/libraries/{$name}": ["type:drupal-library"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
      "web/modules/custom/{$name}": ["type:drupal-custom-module"],
      "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
    },
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      }
    }
  }
}
