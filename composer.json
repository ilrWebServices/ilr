{
  "name": "ilr-web-services/ilr",
  "description": "Composer-based Drupal 8 site for www.ilr.cornell.edu",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Aaron Froelich",
      "email": "aaronf@cornell.edu",
      "role": "Developer"
    },
    {
      "name": "Jeff Amaral",
      "email": "jeff.amaral@cornell.edu",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8",
      "exclude": [
        "drupal/persistent_visitor_parameters",
        "drupal/sftp_client"
      ]
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/union.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/union_organizer.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/drupal_collegenet2sf.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/ilr_outreach_order_submitter.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/ilr_outreach_discount_api.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/persistent_visitor_parameters.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/sftp_client.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/ilr-analytics-session.git"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^2.0",
    "cornell/union": "dev-master",
    "cweagans/composer-patches": "^1.6.5",
    "drupal-ckeditor-libraries-group/fakeobjects": "^4.16",
    "drupal/address": "^2.0",
    "drupal/address_display": "^1.0@dev",
    "drupal/admin_toolbar": "^3.0.0",
    "drupal/allowed_formats": "^3",
    "drupal/better_social_sharing_buttons": "^4.0",
    "drupal/block_visibility_groups": "^2.0",
    "drupal/campaign_monitor_rest_client": "^1.0.0",
    "drupal/captcha": "^2",
    "drupal/collection": "3.x-dev@dev",
    "drupal/collegenet2sf": "^2",
    "drupal/condition_path": "^2.0",
    "drupal/config_filter": "^1",
    "drupal/config_ignore_pattern": "^1",
    "drupal/config_split": "^2",
    "drupal/core-composer-scaffold": "^10",
    "drupal/core-recommended": "^10",
    "drupal/date_range_formatter": "^9",
    "drupal/dynamic_entity_reference": "^4",
    "drupal/easy_breadcrumb": "^2.0.0",
    "drupal/entity_browser": "^2.9",
    "drupal/entity_usage": "2.x-dev@dev",
    "drupal/extra_field": "^2.0.0",
    "drupal/facets": "^3.0",
    "drupal/filehash": "^3",
    "drupal/focal_point": "^2",
    "drupal/footnotes": "^3.0",
    "drupal/friendly_captcha_challenge": "^0.9.18",
    "drupal/friendlycaptcha": "^1",
    "drupal/google_tag": "^2.0",
    "drupal/honeypot": "2.1.4",
    "drupal/ilr_analytics_session": "dev-main",
    "drupal/ilr_outreach_discount_api": "^1",
    "drupal/ilr_outreach_order_submitter": "1.x-dev",
    "drupal/imagecache_external": "^3.0",
    "drupal/inline_entity_form": "^3",
    "drupal/key": "^1.14",
    "drupal/key_value_field": "^1.0",
    "drupal/linkit": "^7.0",
    "drupal/linkit_media_library": "^2.0",
    "drupal/media_library_edit": "^3.0",
    "drupal/media_pdf_thumbnail": "^6",
    "drupal/media_remote": "^1.8",
    "drupal/menu_item_extras": "^3.0",
    "drupal/metatag": "^2.0",
    "drupal/migrate_file": "^2.0",
    "drupal/migrate_plus": "^6.0",
    "drupal/migrate_scheduler": "^1.0@RC",
    "drupal/migrate_source_csv": "^3.5",
    "drupal/migrate_tools": "^6.0",
    "drupal/monolog": "^3.0",
    "drupal/multiple_selects": "^1.2",
    "drupal/paragraphs": "^1.9",
    "drupal/paragraphs_previewer": "^1.4",
    "drupal/pathauto": "^1.4",
    "drupal/persistent_visitor_parameters": "^3",
    "drupal/prepopulate": "^2.2",
    "drupal/recreate_block_content": "^3.0",
    "drupal/redirect": "^1.4",
    "drupal/salesforce": "^5",
    "drupal/samlauth": "^3.0",
    "drupal/search_api": "^1.14",
    "drupal/seven": "^1.0",
    "drupal/sftp_client": "^2",
    "drupal/simple_gse_search": "^2.0",
    "drupal/smart_read_more_link": "^2.0",
    "drupal/summary_word_limit": "^2.0",
    "drupal/svg_image_field": "^2.1",
    "drupal/token_filter": "^2.0",
    "drupal/twig_tweak": "^3.0.0",
    "drupal/typed_data": "^2",
    "drupal/union_organizer": "dev-union_ng",
    "drupal/views_autocomplete_filters": "^2",
    "drupal/views_remote_data": "^1.0",
    "drupal/webform": "^6",
    "drush/drush": "^13",
    "firebase/php-jwt": "^6.0",
    "ilrwebservices/campaign-monitor-rest-api-client": "^1.0.0",
    "league/csv": "^9.0",
    "platformsh/config-reader": "^3",
    "spatie/schema-org": "^3.23",
    "symfony/dotenv": "^7.1"
  },
  "require-dev": {
    "drupal/core-dev": "^10",
    "drupal/devel": "^5.0",
    "drupal/entity_clone": "^2.0",
    "drupal/stage_file_proxy": "^3",
    "drupal/twig_vardumper": "^3.0",
    "palantirnet/drupal-rector": "^0.20.3",
    "phpcompatibility/php-compatibility": "dev-develop"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "cweagans/composer-patches": true,
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "drupal/console-extend-plugin": true,
      "drupal/core-composer-scaffold": true,
      "php-http/discovery": true,
      "phpstan/extension-installer": true,
      "tbachert/spi": false
    }
  },
  "autoload": {
    "files": ["load.environment.php"]
  },
  "scripts": {
    "cs": "phpcs --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md,yml --standard=Drupal --ignore='union_marketing/css/style.css' web/modules/custom/ web/themes/custom/",
    "cbf": "phpcbf --extensions=php,module,inc,install,test,profile,theme,css,info,txt,md,yml --standard=Drupal web/modules/custom/ web/themes/custom/",
    "cs:phpcompat": "phpcs --extensions=php,module,inc,install,test,profile,theme --standard=PHPCompatibility --runtime-set testVersion 8.1 web/modules/custom/ web/themes/custom/",
    "sync-prod": [
      "Composer\\Config::disableProcessTimeout",
      "drush sql:drop -y",
      "platform db:dump --stdout --project=yf4o2w34wqxm6 --environment=master --app=drupal8 --relationship=database --gzip | gunzip | drush sql:cli",
      "./post_sync_fix_triggers.php"
    ],
    "sync-update": [
      "drush deploy",
      "@sf-dev"
    ],
    "sf-dev": [
      "drush sfrvk ilr_marketing_jwt_oauth",
      "drush sfrt ilr_marketing_jwt_oauth_dev",
      "drush sflp"
    ]
  },
  "extra": {
    "composer-exit-on-patch-failure": true,
    "patchLevel": {
      "drupal/core": "-p2"
    },
    "patches": {
      "drupal/core": {
        "Entity query doesn't allow relationship specifier for base entity fields": "https://www.drupal.org/files/issues/core-patch-2915512-7.patch",
        "Allow custom session cookie name": "./patches/2983612-custom-session-cookie-name.patch",
        "Use sqlite database connection in dblog controller": "./patches/dblog_sqlite.diff",
        "Allow node menu widget to some non-admins": "./patches/menu_ui_access.patch",
        "Issue #3446368: SymfonyMailer RfcComplianceException when sending to multiple comma-separated addresses": "https://www.drupal.org/files/issues/2024-05-10/3446368-14.patch",
        "Issue #34165856: alter local.module to properly check whether a JS file is local or not": "https://git.drupalcode.org/project/drupal/-/commit/f2687c85d02466e90979c36b025c8b8ec1cdcaf8.diff"
      },
      "drupal/paragraphs_previewer": {
        "Entities using layoutbuilder cannot get fields previewed": "https://gist.githubusercontent.com/a-fro/1c9b5fcf778edcc49eb39dab292cbc0c/raw/c2352a640270412d2d73232a1e5d3ca69a606726/paragraphs-preview-no-output-layout-builder.patch"
      },
      "drupal/facets": {
        "Issue #2979223: Add option to show current search string in facet summary": "https://git.drupalcode.org/issue/facets-2979223/-/commit/871c779a67704275f975541af803e6e2c81373f8.diff",
        "Error: Call to a member function getAllowedBundles() on null": "https://git.drupalcode.org/issue/facets-3458558/-/commit/95a9c9f71d033b9751b25d06892b81609598c747.diff",
        "Issue #2937191: Render using theme input and select instead of lists with links for checkboxes and dropdown": "https://www.drupal.org/files/issues/2025-03-12/facets-n2937191-95-v3.patch"
      },
      "drupal/footnotes": {
        "Issue #3381366: Warnings when leaving values empty": "https://www.drupal.org/files/issues/2023-08-23/fix-warnings-when-leaving-values-empty-3381366-5_0.patch"
      },
      "drupal/salesforce": {
        "Issue #3221747: Improve performance of asynchronous salesforce push": "https://git.drupalcode.org/issue/salesforce-3221747/-/commit/03a3308d7d1796f007dfb8d0f5648d31ec373f03.diff"
      },
      "drupal/date_range_formatter": {
        "Issue #3309324: Passing empty value to t() when same day + time for start and end date": "https://git.drupalcode.org/issue/date_range_formatter-3309324/-/commit/4e645fcfa229c608be933ca16a4214a2bf5b47ec.diff"
      },
      "drupal/webform": {
        "Use symfony_mailer for html email": "./patches/webform_symfony_mailer.patch",
        "Add filtering by category to Webform reference widget": "./patches/webform_reference_widget_alter_context.diff"
      },
      "drupal/linkit": {
        "Issue #3436733: Linkit Link field: Double-encoded file links": "https://www.drupal.org/files/issues/2024-09-26/3436733-7-linkit_base_url_decode_fix.patch"
      }
    },
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/libraries/{$name}": ["type:drupal-library"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
      "web/modules/custom/{$name}": ["type:drupal-custom-module"],
      "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
    },
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      },
      "file-mapping": {
        "[web-root]/robots.txt": {
          "append": "patches/robots-additions.txt"
        }
      }
    }
  }
}
