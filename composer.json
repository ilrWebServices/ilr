{
  "name": "ilr-web-services/ilr",
  "description": "Composer-based Drupal 8 site for www.ilr.cornell.edu",
  "type": "project",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Aaron Froelich",
      "email": "aaronf@cornell.edu",
      "role": "Developer"
    },
    {
      "name": "Jeff Amaral",
      "email": "jeff.amaral@cornell.edu",
      "role": "Developer"
    }
  ],
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/union.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/union_organizer.git"
    },
    {
      "type": "vcs",
      "url": "https://github.com/ilrWebServices/drupal_collegenet2sf.git"
    }
  ],
  "require": {
    "php": ">=5.6",
    "composer/installers": "^1.9",
    "cornell/union": "dev-union_ng",
    "cweagans/composer-patches": "^1.6.5",
    "drupal-ckeditor-libraries-group/fakeobjects": "^4.16",
    "drupal/address": "^1.7",
    "drupal/admin_toolbar": "^3.0.0",
    "drupal/allowed_formats": "^1.2",
    "drupal/better_social_sharing_buttons": "^4.0",
    "drupal/block_visibility_groups": "^1.3",
    "drupal/campaign_monitor_rest_client": "^1.0.0",
    "drupal/collection": "3.x-dev@dev",
    "drupal/collegenet2sf": "^2",
    "drupal/config_split": "^1.4",
    "drupal/config_update": "^1.7",
    "drupal/console": "^1.0.2",
    "drupal/core-composer-scaffold": "^9.0.0",
    "drupal/core-recommended": "^9.0.0",
    "drupal/date_range_formatter": "^9",
    "drupal/dynamic_entity_reference": "^2.0",
    "drupal/easy_breadcrumb": "^2.0.0",
    "drupal/entity_browser": "^2.4",
    "drupal/entity_usage": "^2.0@beta",
    "drupal/extra_field": "^2.0.0",
    "drupal/filehash": "^1.4",
    "drupal/focal_point": "^1.4",
    "drupal/footnotes": "^3.0",
    "drupal/google_tag": "^1.2",
    "drupal/honeypot": "^2.0",
    "drupal/imagecache_external": "^3.0",
    "drupal/inline_entity_form": "^1.0@RC",
    "drupal/key": "^1.14",
    "drupal/key_value_field": "^1.0",
    "drupal/linkit": "^6.0.0",
    "drupal/linkit_media_library": "^1.0",
    "drupal/mailchimp": "^2",
    "drupal/media_library_edit": "^2.0",
    "drupal/media_pdf_thumbnail": "^5",
    "drupal/menu_item_extras": "^2.8",
    "drupal/metatag": "^1.10",
    "drupal/migrate_file": "^2.0",
    "drupal/migrate_plus": "^6.0",
    "drupal/migrate_tools": "^6.0",
    "drupal/paragraphs": "^1.9",
    "drupal/paragraphs_previewer": "^1.4",
    "drupal/pathauto": "^1.4",
    "drupal/persistent_visitor_parameters": "1.0.x-dev@dev",
    "drupal/prepopulate": "^2.2",
    "drupal/recreate_block_content": "^2.0",
    "drupal/redirect": "^1.4",
    "drupal/salesforce": "^5",
    "drupal/samlauth": "^3.0",
    "drupal/search_api": "^1.14",
    "drupal/sftp_client": "1.0.x-dev",
    "drupal/smart_read_more_link": "^2.0",
    "drupal/summary_word_limit": "^2.0",
    "drupal/svg_image_field": "^2.1",
    "drupal/token_filter": "^1.1",
    "drupal/twig_tweak": "^3.0.0",
    "drupal/typed_data": "^1.0@alpha",
    "drupal/union_organizer": "dev-union_ng",
    "drupal/views_autocomplete_filters": "^1.3",
    "drupal/webform": "^6",
    "drupal/webform_mailchimp": "^5.9",
    "drush/drush": "^10.0.0",
    "firebase/php-jwt": "^5.2",
    "ilrwebservices/campaign-monitor-rest-api-client": "^1.0.0",
    "league/csv": "^9.0",
    "platformsh/config-reader": "^2.4",
    "thinkshout/mailchimp-api-php": "dev-master as 2.0.0",
    "vlucas/phpdotenv": "^4.0"
  },
  "require-dev": {
    "drupal/core-dev": "^9.0.0",
    "drupal/devel": "^4.1",
    "drupal/entity_clone": "^1.0@beta",
    "drupal/stage_file_proxy": "^1.0@RC",
    "drupal/twig_vardumper": "^3.0"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "allow-plugins": {
      "composer/installers": true,
      "cweagans/composer-patches": true,
      "drupal/console-extend-plugin": true,
      "drupal/core-composer-scaffold": true,
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  },
  "autoload": {
    "files": ["load.environment.php"]
  },
  "scripts": {
    "cs": "phpcs --standard=vendor/drupal/coder/coder_sniffer/Drupal --ignore='union_marketing/css/style.css' web/modules/custom/ web/themes/custom/",
    "cbf": "phpcbf --standard=vendor/drupal/coder/coder_sniffer/Drupal web/modules/custom/ web/themes/custom/",
    "sync-prod": [
      "Composer\\Config::disableProcessTimeout",
      "drush sql:drop -y",
      "drush sql:sync @ilr-web.master @self -y",
      "./post_sync_fix_triggers.php"
    ],
    "sync-prod-update": [
      "drush cr",
      "drush updatedb --no-post-updates -y",
      "drush config:import -y",
      "drush updatedb -y",
      "@sf-dev"
    ],
    "sf-dev": [
      "drush sfrvk ilr_marketing_jwt_oauth",
      "drush sfrt ilr_marketing_jwt_oauth_dev",
      "drush sflp"
    ]
  },
  "extra": {
    "composer-exit-on-patch-failure": true,
    "patchLevel": {
      "drupal/core": "-p2"
    },
    "patches": {
      "drupal/core": {
        "Remove invalid iframe attributes from oembed field formatter": "https://www.drupal.org/files/issues/2019-07-31/remove-iframe-attributes-3071446-4.patch",
        "Entity query doesn't allow relationship specifier for base entity fields": "https://www.drupal.org/files/issues/core-patch-2915512-7.patch",
        "Pass current route parameters to the confirmation form route": "./patches/2901412-pass-current-route_mr-1666.patch",
        "Redirect to term view page from term edit page": "https://www.drupal.org/files/issues/2022-01-27/taxonomy-redirect_to_view_from_edit-2826592-33.patch",
        "Allow custom session cookie name": "./patches/2983612-custom-session-cookie-name.patch",
        "Use sqlite database connection in dblog controller": "./patches/dblog_sqlite.diff",
        "Issue 3088168: Media thumbnail dimensions are wrong for YouTube videos [and updated images]": "https://git.drupalcode.org/project/drupal/-/commit/a50d2b271ad7b44aae684addd9de7c4c4425ecc7.diff"
      },
      "drupal/address": {
        "Configure visible address fields per field formatter": "https://www.drupal.org/files/issues/2019-05-23/address-visible_address_fields_per_field_formatter-2852800-23.patch"
      },
      "drupal/entity_usage": {
        "Use local task usage route for warning messages": "./patches/entity_usage_warning_link_urls.patch"
      },
      "drupal/paragraphs_previewer": {
        "Entities using layoutbuilder cannot get fields previewed": "https://gist.githubusercontent.com/a-fro/1c9b5fcf778edcc49eb39dab292cbc0c/raw/c2352a640270412d2d73232a1e5d3ca69a606726/paragraphs-preview-no-output-layout-builder.patch"
      },
      "drupal/mailchimp": {
        "Add member tag support when subscribing": "./patches/mailchimp_tags.patch"
      },
      "drupal/webform_mailchimp": {
        "Add member tag configuration to webform mailchimp handler": "./patches/webform_mailchimp_tags.patch"
      },
      "drupal/footnotes": {
        "Add tags support to footnotes editor plugin": "https://www.drupal.org/files/issues/2021-11-16/footnotes-basic-styles-for-footnote-text-field-3204959-4.patch"
      },
      "drupal/focal_point": {
        "Preview link accidentally closes the media library": "https://www.drupal.org/files/issues/2020-10-11/preview_link_accidentally_closes_the_media_library-3162210-19.patch"
      },
      "drupal/linkit": {
        "Linkit for Link field": "https://www.drupal.org/files/issues/2021-04-07/linkit-for-link-field-2712951-216.patch"
      },
      "drupal/salesforce": {
        "Issue #3210809: Salesforce link appears in \"Operations\" links on views for anonymous users": "https://git.drupalcode.org/issue/salesforce-3210809/-/commit/e770f23fd303be476229d7ab89a42427a7ed9bbd.diff",
        "Issue #3221747: Improve performance of asynchronous salesforce push": "https://git.drupalcode.org/issue/salesforce-3221747/-/commit/03a3308d7d1796f007dfb8d0f5648d31ec373f03.diff",
        "Issue #3226511: Allow RestClient to handle non-JSON data": "./patches/salesforce-3226511_non-json_mr-24.patch"
      },
      "drupal/persistent_visitor_parameters": {
        "Allow cookie name and domain to be changed": "https://git.drupalcode.org/project/persistent_visitor_parameters/-/commit/6269974586dccbbd62d08585261f8cbb6e1590f1.diff",
        "Fix settings form permission": "https://git.drupalcode.org/issue/persistent_visitor_parameters-3266421/-/commit/3d5c811d7757d36b665c79abf607147988eb2c6f.diff"
      }
    },
    "installer-paths": {
      "web/core": ["type:drupal-core"],
      "web/libraries/{$name}": ["type:drupal-library"],
      "web/modules/contrib/{$name}": ["type:drupal-module"],
      "web/profiles/contrib/{$name}": ["type:drupal-profile"],
      "web/themes/contrib/{$name}": ["type:drupal-theme"],
      "drush/Commands/contrib/{$name}": ["type:drupal-drush"],
      "web/modules/custom/{$name}": ["type:drupal-custom-module"],
      "web/themes/custom/{$name}": ["type:drupal-custom-theme"]
    },
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      }
    }
  }
}
